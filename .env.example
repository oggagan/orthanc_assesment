# Orthanc (set ORTHANC_USERNAME/ORTHANC_PASSWORD if Orthanc requires HTTP auth)
ORTHANC_URL=http://localhost:8042
ORTHANC_USERNAME=orthanc
ORTHANC_PASSWORD=orthanc

# Kafka (use kafka:29092 when running middleware inside docker-compose)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=dicom.metadata.v1
KAFKA_DLQ_TOPIC=dicom.metadata.dlq

# PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/dicom

# Storage backend: local (default) or gcs
STORAGE_PATH=./storage
STORAGE_BACKEND=local

# GCS (only when STORAGE_BACKEND=gcs)
# GCS_BUCKET=your-bucket-name
# GCS_PROJECT=your-gcp-project-id
# GCS_UPLOAD_TIMEOUT_SECONDS=60
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/creds.json

# Observability
LOG_LEVEL=INFO
